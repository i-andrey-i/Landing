---

import App from './App.tsx'
import Header from '../blocks/Header/Header.tsx'
import Title from '../blocks/Title/Title'
import About from '../blocks/About/About'
import Advantages from '../blocks/Advantages/Advantages'
import Clients from '../blocks/Clients/Clients'
import Product from '../blocks/Products/Products'
import Form from '../blocks/Form/Form'
import Footer from '../blocks/Footer/Footer.jsx'

const title = "Самые лучшие станки с ЧПУ";
---

<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <style>
    html {
      scroll-behavior: smooth;
      scroll-padding-top: 100px;
    }
    section {
      min-height: 100vh;
    }
    body {
      margin: 0;
      padding: 0;
    }
  </style>
</head>
<body>
    <App>
      <Header />
      <main>
        <section id="title"><Title /></section>
        <section id="about"><About /></section>
        <section id="advantages"><Advantages /></section>
        <section id="clients"><Clients /></section>
        <section id="products"><Product /></section>
        <section id="form"><Form /></section>
      </main>
      <Footer />
    </App>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const navLinks = document.querySelectorAll('[data-section]');
        
        navLinks.forEach(link => {
          link.addEventListener('click', (e) => {
            e.preventDefault();
            const targetId = link.getAttribute('data-section') || '';
            const targetElement = document.getElementById(targetId);
            
            if (targetElement) {
              const yOffset = -100;
              const y = targetElement.getBoundingClientRect().top + window.pageYOffset + yOffset;
              window.scrollTo({ top: y, behavior: 'smooth' });
            }
          });
        });
      });
    </script>
</body>
</html>